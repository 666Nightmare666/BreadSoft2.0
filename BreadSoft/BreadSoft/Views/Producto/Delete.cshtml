@model BreadSoft.Models.Producto
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.producto.idProducto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.producto.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.producto.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.producto.cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.producto.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.producto.foto)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>

